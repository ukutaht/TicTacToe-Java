<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/templates/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean class="com.heruku.tictactoe.web.StartGameController">
        <constructor-arg name="factory" ref="factory"/>
        <constructor-arg name="repository" ref="repository"/>
    </bean>

    <bean id="factory" class="com.heruku.tictactoe.core.GameFactory" >
        <constructor-arg ref="io" />
    </bean>

    <bean id="repository" class="com.heruku.tictactoe.web.GameRepository">
    </bean>

    <bean id="io" class="com.heruku.tictactoe.web.WebIO">
    </bean>
</beans>